{
  "name": "task-manager-final",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "dev": "concurrently \"npm:server\" \"npm:client\"",
    "server": "cd server && nodemon server.js",
    "client": "cd client && npm start"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22"
  }
}